# ============================================
# AgentMonitor - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# Do NOT commit .env file to version control

# -----------------------------
# MongoDB Configuration
# -----------------------------
MONGO_URI=mongodb://localhost:27017/
DB_NAME=agentmonitor

# -----------------------------
# LLM Configuration - Gemini API
# -----------------------------
# Gemini API Keys - Add multiple keys for automatic rotation
# Get your API keys from: https://makersuite.google.com/app/apikey
# System will automatically rotate between keys when quota is reached
GEMINI_API_KEY_1=your_gemini_api_key_1_here
GEMINI_API_KEY_2=your_gemini_api_key_2_here
GEMINI_API_KEY_3=your_gemini_api_key_3_here
GEMINI_API_KEY_4=your_gemini_api_key_4_here
GEMINI_API_KEY_5=your_gemini_api_key_5_here
# Add more keys as needed (GEMINI_API_KEY_6, GEMINI_API_KEY_7, etc.)

# -----------------------------
# Backend Configuration
# -----------------------------
# Backend API server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080

# -----------------------------
# Frontend Configuration
# -----------------------------
# React app port (optional - uses default 3000)
# PORT=3000
# REACT_APP_API_URL=http://localhost:8080/api

# -----------------------------
# Authentication (Optional)
# -----------------------------
# JWT secret key for token generation
# JWT_SECRET=your_secret_key_for_jwt_tokens_here
# JWT_EXPIRATION=3600

# -----------------------------
# Model Configuration
# -----------------------------
# XGBoost model settings
MODEL_PATH=models/xgb_model.json
PREDICTOR_PATH=models/mas_predictor.pkl

# -----------------------------
# Multi-Agent System Settings
# -----------------------------
# Agent configuration
AGENT_TIMEOUT=30
MAX_RETRIES=3
AUTO_ENHANCE_THRESHOLD=0.75

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=INFO
LOG_DIR=logs/

# -----------------------------
# Development Settings
# -----------------------------
# Set to True for development, False for production
DEBUG=False
